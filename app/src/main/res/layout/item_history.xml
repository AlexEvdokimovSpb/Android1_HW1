<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/margin8"
    android:layout_marginTop="@dimen/margin4"
    android:layout_marginRight="@dimen/margin8"
    android:layout_marginBottom="@dimen/margin4"
    card_view:cardCornerRadius="@dimen/margin2"
    card_view:cardElevation="@dimen/margin2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/teal_200"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_place_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="TextView"
            android:textAlignment="viewStart"
            android:textSize="@dimen/text30" />

        <TextView
            android:id="@+id/text_temperature_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="viewEnd"
            android:textSize="@dimen/text30" />

        <TextView
            android:id="@+id/text_feelsTemperature_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="viewEnd"
            android:textSize="@dimen/text30" />

        <TextView
            android:id="@+id/text_dateAndTime_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="viewEnd"
            android:textSize="@dimen/text30" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
