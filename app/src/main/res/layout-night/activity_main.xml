<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editTextDatePlace"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:inputType="date"
        app:layout_constraintStart_toEndOf="@+id/editTextTimePlace"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/editTextTimePlace"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:inputType="time"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textViewPlace"
        android:layout_width="383dp"
        android:layout_height="55dp"
        android:text="@string/saint_petersburg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDatePlace" />


    <Button
        android:id="@+id/buttonToday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonToday"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonTomorrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonTomorrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonToday" />

    <Button
        android:id="@+id/buttonFiveDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonFiveDays"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonTomorrow" />

    <EditText
        android:id="@+id/editTextNumberTemperature"
        android:layout_width="121dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPlace" />

    <TextView
        android:id="@+id/textViewTemperature"
        android:layout_width="59dp"
        android:layout_height="60dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="12dp"
        android:text="@string/temperature"
        app:layout_constraintStart_toEndOf="@+id/editTextNumberTemperature"
        app:layout_constraintTop_toBottomOf="@+id/textViewPlace" />


    <TextView
        android:id="@+id/textViewCloudy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cloudy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumberTemperature" />

    <TextView
        android:id="@+id/textViewFeels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/feels"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCloudy" />

    <EditText
        android:id="@+id/editTextNumberFeelsTemperature"
        android:layout_width="121dp"
        android:layout_height="30dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFeels" />

    <TextView
        android:id="@+id/textViewFeelsTemperature"
        android:layout_width="59dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:text="@string/temperature"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextNumberFeelsTemperature"
        app:layout_constraintStart_toEndOf="@+id/editTextNumberFeelsTemperature" />

    <ImageView
        android:id="@+id/imageViewCloudy"
        android:layout_width="178dp"
        android:layout_height="155dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPlace"
        app:srcCompat="@drawable/cloudy" />

</androidx.constraintlayout.widget.ConstraintLayout>