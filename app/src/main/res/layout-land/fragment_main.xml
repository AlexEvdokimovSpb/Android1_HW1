<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editTextDatePlace"
        android:layout_width="@dimen/width190"
        android:layout_height="@dimen/height60"
        android:inputType="date"
        app:layout_constraintStart_toEndOf="@+id/editTextTimePlace"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="@dimen/dimens16">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextDatePlace2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/date" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editTextTimePlace"
        android:layout_width="@dimen/width190"
        android:layout_height="@dimen/height60"
        android:inputType="time"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="@dimen/dimens16">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextTimePlace2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/time" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textViewPlace"
        android:layout_width="@dimen/width190"
        android:layout_height="@dimen/height60"
        android:text="@string/saint_petersburg"
        android:textSize="@dimen/size_place"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDatePlace" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonToday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonToday"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonTomorrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonTomorrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonToday" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonFiveDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonFiveDays"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonTomorrow" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editTextNumberTemperature"
        android:layout_width="@dimen/width120"
        android:layout_height="@dimen/height60"
        android:layout_marginTop="@dimen/margin5"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPlace">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/degrees" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textViewTemperature"
        android:layout_width="@dimen/width60"
        android:layout_height="@dimen/height60"
        android:layout_marginStart="@dimen/margin1"
        android:layout_marginTop="@dimen/margin12"
        android:text="@string/celsius"
        app:layout_constraintStart_toEndOf="@+id/editTextNumberTemperature"
        app:layout_constraintTop_toBottomOf="@+id/textViewPlace" />

    <TextView
        android:id="@+id/textViewCloudy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cloudy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumberTemperature" />

    <TextView
        android:id="@+id/textViewFeels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/feels"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCloudy" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editTextNumberFeelsTemperature"
        android:layout_width="@dimen/width120"
        android:layout_height="@dimen/height60"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFeels">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/degrees" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textViewFeelsTemperature"
        android:layout_width="@dimen/width60"
        android:layout_height="@dimen/height30"
        android:layout_marginStart="@dimen/margin5"
        android:text="@string/temperature"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextNumberFeelsTemperature"
        app:layout_constraintStart_toEndOf="@+id/editTextNumberFeelsTemperature" />

    <ImageView
        android:id="@+id/imageViewCloudy"
        android:layout_width="@dimen/width190"
        android:layout_height="@dimen/height155"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPlace"
        app:srcCompat="@drawable/cloudy" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_select_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_place"
        app:layout_constraintStart_toEndOf="@+id/textViewPlace"
        app:layout_constraintTop_toBottomOf="@+id/editTextDatePlace" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_more_details"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonFiveDays" />


</androidx.constraintlayout.widget.ConstraintLayout>
